.doorsnedeContainer
    padding 36% 0
    width 100%
    position relative
  .view
    background-size contain
    background-repeat no-repeat
    position absolute
    width 100%
    height 100%
    left 0
    top 0
  .droog
    background-image url(../images/doorsnede_droog.jpg)
  .droog-opwoeling
    background-image url(../images/doorsnede_droog_opwoeling.jpg)
  .droog-woonboot
    background-image url(../images/doorsnede_droog_woonboot.jpg)
  .rain
    background-image url(../images/doorsnede_rain.jpg)
  .rain-overstort
    background-image url(../images/doorsnede_rain_overstort.jpg)
  .rain-uitspoeling
    background-image url(../images/doorsnede_rain_uitspoeling.jpg)

#doorsnede
  background-color canvas
  
.doorsnedeNav
  margin-bottom medium-em
  li
    cursor pointer
    padding small-em
    border 2px solid call-to-action
    display inline-block
    margin 0 small-em small-em 0
    color call-to-action
    font-family 'Montserrat', sans-serif
    
    &:hover
      background-color call-to-action
      transition all .2s ease-out
      color canvas
  .active
    background-color call-to-action
    color canvas
      
.doorsnede-text-container
  .text-view
    visibility hidden
    width 0
    height 0
  .active
    visibility visible
    width auto
    height auto