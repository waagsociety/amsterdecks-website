body, html, main
  height 100%
.one-col
  width 100%
.two-col
  width 50%
.three-col
  width 33.33%
.four-col
  width 25%
.four-col-three
  width 75%
.five-col
  width 20%
.loading
  overflow hidden
.loader
  position fixed
  width 100%
  height 100%
  background lightgrey
  top 0
  left 0
  z-index 9999
  overflow hidden
  transition all .2s linear
.page
  min-height 100%
  width 100%
  background-attachment fixed
  background-size cover
  background-color canvas
  overflow hidden
  svg
    max-width 100vw
    max-height 100vw
    width auto
    height auto
.page-1
  height: 100%
  .flowmap
    position absolute
    width 100%
    height 100%
    background secondary
    top 0
    left 0
    z-index 0
.page-3
  background canvas
#doorsnede
  background-color lightgrey
.logo, .logo-drop
  max-width 20%
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  width: 100%
  z-index 2
  
.loader .logo svg, .loader .logo-drop svg{
  fill brand-color
}
.logo svg, .logo-drop svg
  fill canvas
  left 0
  top 0
  
#drop, .thedrop
  position relative
  
.loader
  #drop
    animation-name mymove
    animation-duration 4s
    animation-iteration-count infinite
    transition all .2s ease-out
    
@keyframes mymove {
    from {top: 0px;}
    to {top: 600px;}
}

.contaminator-container
  position absolute
  top 0
  left 0
  opacity 0.1
  overflow hidden

.contaminator
  position absolute

.contaminator.overloop
  background-color yellow
  border-radius 100%

.svgContainer
  padding 0 medium-percentage

.full-height
  height 100%