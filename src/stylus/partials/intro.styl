#intro
  background-image url(../images/amstel_view.jpg)
  background-size cover
  .two-col
    z-index 2
    margin-left 25%
    font-size 130%
  a
    color white
    text-decoration underline
  .blackOverlay
    background-color rgba(0,0,0, .5)
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    z-index 0

  #intrologos
    width 85%
    position relative
    z-index 2
    text-align center
    margin 0 auto
    a
      margin 0 8%
      width 16%
      float left
      svg
        path
          fill white
        rect
          fill white
      &.waag
        margin-top -1.9%
      &.rdva
        margin-top 0
      &.waternet
        margin-top -.9%